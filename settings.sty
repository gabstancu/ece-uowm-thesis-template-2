% =================== TIKZ SETUP ===================
% Essential TikZ setup
\usepackage{tikz}
\usetikzlibrary{
  arrows.meta,         % arrow heads
  positioning,         % relative positioning of nodes
  calc,                % coordinate calculations
  shapes.geometric,    % common shapes like rectangle, diamond
  decorations.pathmorphing, % fuzzy/zigzag lines
  patterns,            % fill patterns
  matrix               % matrix diagrams
}

% Common styles
\tikzset{
  every node/.style = {font=\small}, % global font
  mybox/.style = {
    draw, 
    rounded corners, 
    thick, 
    fill=blue!10,
    inner sep=8pt
  },
  myarrow/.style = {
    ->, 
    thick, 
    draw=black!80
  },
  highlight/.style = {
    fill=yellow!30,
    rounded corners
  },
  point/.style = {
    circle, fill=black, inner sep=1.5pt
  }
}


